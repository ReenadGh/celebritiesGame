<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#0E0E0E"
    tools:context=".celebritiesGame">

    <LinearLayout
        android:id="@+id/stagameView"
        android:layout_width="321dp"
        android:layout_height="521dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="336dp"
            android:layout_height="274dp"
            app:srcCompat="@drawable/heads" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="let's Start "
            android:textAlignment="center"
            android:textColor="#4EAAE8"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/letsStart2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="place your device on forehead !"
            android:textAlignment="center"
            android:textColor="#558B2F"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/EgameView"
        android:layout_width="284dp"
        android:layout_height="454dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="192dp"

            app:srcCompat="@drawable/star2" />

        <TextView
            android:id="@+id/letsStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#558B2F"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:fontFamily="casual"
            android:text="Play Again" />

        <Button
            android:id="@+id/gotomain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:fontFamily="casual"
            android:text="Home page" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rotaite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="539dp"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Rotate the Device !"
            android:textAlignment="center"
            android:textColor="#0E2CFF"
            android:textSize="34sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/timerLinear"
        android:layout_width="105dp"
        android:layout_height="95dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01">

        <ProgressBar
            android:id="@+id/progressTimer"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:indeterminateTint="@color/black"
            android:progress="25" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingTop="12dp"
            android:text="00"
            android:textColor="#2842FF"
            android:textSize="47sp"
            android:textStyle="bold" />

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/celCard"
        android:layout_width="477dp"
        android:layout_height="433dp"
        android:visibility="invisible"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="496dp"
            android:layout_height="wrap_content"
            android:background="@drawable/note"

            android:orientation="vertical">

            <TextView
                android:id="@+id/nameofC"
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:fontFamily="casual"
                android:paddingTop="70dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#E89B38"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hint1"
                android:layout_width="442dp"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="60dp"
                android:text="TextView"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/hint2"
                android:layout_width="446dp"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingLeft="60dp"
                android:text="TextView"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/hint3"
                android:layout_width="448dp"
                android:layout_height="63dp"
                android:fontFamily="casual"
                android:paddingLeft="60dp"
                android:text="TextView"
                android:textSize="34sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>